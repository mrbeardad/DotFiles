" Windowåˆ‡æ¢
function! Jump(i) abort
    if winnr('$') >= a:i
        exe a:i . 'wincmd w'
    endif
endfunction
nnoremap <Space>1 :call Jump(1)<CR>
nnoremap <Space>2 :call Jump(2)<CR>
nnoremap <Space>3 :call Jump(3)<CR>
nnoremap <Space>4 :call Jump(4)<CR>
nnoremap <Space>5 :call Jump(5)<CR>

